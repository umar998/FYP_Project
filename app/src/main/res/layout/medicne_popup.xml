<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp"
    android:text="Medicines"
    android:textAlignment="center"
    android:textAllCaps="true"
    android:textColor="#009688"
    android:textSize="20dp"
    android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <CheckBox
            android:id="@+id/Check_box_panadol"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Panadol"/>
        <CheckBox
            android:id="@+id/Check_box_Beflam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beflam" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/Check_box_softin"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Softin"/>
        <CheckBox
            android:id="@+id/Check_box_Emoxel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emoxel" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/Check_box_Brufin"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Brufin"/>
        <CheckBox
            android:id="@+id/Check_box_Desprin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desprin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel"
            android:layout_marginLeft="120dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="right"
            android:hint="Cancel" />
        <Button
            android:id="@+id/ok"
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="right"
            android:hint="OK" />a

    </LinearLayout>

</LinearLayout>