<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backcolor"
    tools:context=".NextPageofNurseAddNewPatientActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vitals:"
        android:textSize="23dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:hint="Blood Pressure:  "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:hint="Systolic:"/>
        <EditText
           android:layout_marginLeft="3dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/Edittext_systolic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:hint="Diastolic:"/>
        <EditText
            android:layout_marginLeft="3dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/Edittext_diastolic"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Sugar:"/>
        <EditText
            android:layout_marginLeft="86dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/Edittext_sugar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Temperature"/>
        <EditText
            android:layout_marginLeft="35dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/Edittext_temperature"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Symptoms:"
        android:textSize="23dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/Check_box_cough"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Cough"/>

        <CheckBox
            android:id="@+id/Check_box_stomachInfection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stomach Infecion" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/Check_box_highpulse"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="High Pulse"/>
        <CheckBox
            android:id="@+id/Check_box_injury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Injury" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/Check_box_backpain"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Back Pain"/>
        <CheckBox
            android:id="@+id/Check_box_headache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Headache" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vital's / Test Image:"
        android:textSize="23dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:id="@+id/imagesss"/>
        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            android:id="@+id/testimagesss"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/image"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:hint="Vitals Image" />
        <Button
            android:layout_marginLeft="40dp"
            android:id="@+id/testimage"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:hint="Test Image" />
    </LinearLayout>
