<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JrDocLoginTestActivity"
    android:background="@drawable/backcolor"
    android:padding="20dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_logout_24"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/text_view_username"
        android:layout_below="@+id/logout_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/logout_button"
        android:hint="Umar Alam"
        android:textAlignment="center"
        android:textColor="#1C0A10"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/text_view_spinner_Provinces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_username"
        android:text="Patient's Request"
        android:layout_marginLeft="50dp"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="22sp" />
    <RelativeLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_view_spinner_Provinces">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_spinner_Provinces"
                android:id="@+id/patient_name"
                android:hint="No patients available"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/patient_name"
                android:id="@+id/patient_age"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black" />
            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/accept"
        android:layout_below="@+id/containerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:backgroundTint="@color/teal_700"
        android:hint="Accept"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FF5722" />
</RelativeLayout>