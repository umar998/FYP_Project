<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchingPatientCNICActivity"
    android:orientation="vertical"
    android:background="@drawable/backcolor">
    <ImageView
        android:layout_marginLeft="140dp"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:src="@drawable/search"
        android:id="@+id/imagesss"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColorHint="#191514">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_CNIC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search Record" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/teal_700"
            android:hint="Go Back"
            android:shadowColor="#ede9e9"
            android:textAllCaps="true"
            android:textColor="#FF5722"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>